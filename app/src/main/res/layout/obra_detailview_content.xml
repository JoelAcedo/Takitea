<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:padding="0dp"
    android:background="@color/cardview_light_background">

    <ImageView
        android:id="@+id/cover_detail"
        android:layout_width="110dp"
        android:layout_height="160dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"
        android:background="@color/colorAccent"
        android:src="@drawable/romeo_y_julieta_m"
        android:layout_alignParentLeft="true" />

    <!--android:src="@drawable/star_wars"-->

    <TextView
        android:id="@+id/text_title_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="7.5dp"
        android:text="Star Wars VII: El despertar de la fuerza"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/cover_detail"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:id="@+id/calendar_img_detail"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/calendar"
        android:layout_toRightOf="@+id/cover_detail"
        android:layout_above="@+id/time_img_detail"/>

    <TextView
        android:id="@+id/text_dates_detail"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2.5dp"
        android:layout_marginBottom="2.5dp"
        android:text="22/04/16 - 15/07/16"
        android:textSize="14sp"
        android:layout_toRightOf="@+id/calendar_img_detail"
        android:layout_above="@+id/text_time_detail"/>

    <ImageView
        android:id="@+id/time_img_detail"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/timer"
        android:layout_toRightOf="@+id/cover_detail"
        android:layout_above="@+id/euro_img_detail"/>

    <TextView
        android:id="@+id/text_time_detail"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7.5dp"
        android:layout_marginBottom="2.5dp"
        android:text="113 minuts"
        android:textSize="14sp"
        android:layout_toRightOf="@+id/time_img_detail"
        android:layout_above="@+id/text_price_detail"/>

    <ImageView
        android:id="@+id/euro_img_detail"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/euro_96"
        android:layout_toRightOf="@+id/cover_detail"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/text_price_detail"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7.5dp"
        android:layout_marginBottom="7.5dp"
        android:text="10.99 â‚¬"
        android:textSize="14sp"
        android:layout_toRightOf="@+id/euro_img_detail"
        android:layout_alignParentBottom="true"/>

    <!-- "@style/Widget.AppCompat.Button.Colored" -->

</RelativeLayout>


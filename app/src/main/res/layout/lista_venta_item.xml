<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/textIcons"
    android:layout_marginBottom="1dp">

    <TextView
        android:id="@+id/lista_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:text="Joel Acedo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/textSecondary"/>

    <TextView
        android:id="@+id/lista_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="joel.acedo@est.fib.upc.edu"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/lista_name"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/textSecondary"/>

    <TextView
        android:id="@+id/lista_seients"
        android:layout_below="@id/lista_email"
        android:layout_alignParentLeft="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:textSize="12dp"
        android:text="Seients: 12, 20, 21"
        android:textColor="@color/colorAccent"/>

</RelativeLayout>